<div class="backdrop js-backdrop">
 <div class="modal">
  <button
   type="button"
   class="btn-close"
   data-action="close-modal"
  >
   <svg
    class="btn-close-icon"
    width="26"
    height="26"
   >
    <use
     href="/images/icons/sprite.svg#close"
    ></use>
   </svg>
  </button>
  <strong class="modal-title"
   >Online-booking</strong
  >
  <form
   class="js-form"
   autocomplete="off"
   method="post"
   action="/email/send-email"
  >
   <div class="booking-form-group">
    <label class="booking-form-field">
     <input
      minlength="3"
      maxlength="16"
      class="booking-form-input modal-form-input"
      type="text"
      name="name"
      placeholder="Name Surname"
      required
     />
     <span class="booking-form-label">Name*</span>
    </label>
    <label class="booking-form-field">
     <input
      minlength="12"
      maxlength="12"
      pattern="[0-9]*"
      class="booking-form-input modal-form-input"
      type="tel"
      name="phone"
      placeholder="380 98 111 11 11"
      required
     />
     <span class="booking-form-label"
      >Phone*</span
     >
    </label>
   </div>
   <label class="booking-form-field">
    <textarea
     class="booking-form-message modal-form-message"
     name="message"
     maxlength="120"
     rows="5"
     placeholder="Type your messsage..."
    ></textarea>
    <span class="booking-form-label"
     >Message</span
    >
   </label>
   <button
    class="btn booking-btn booking-btn-modal"
    type="submit"
   >
    Send
   </button>
  </form>
 </div>
</div>
