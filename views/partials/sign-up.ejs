<div class="signup_backdrop">
 <section class="signup">
  <div class="signup_form_wrapper">
   <h2>Sign Up</h2>
   <form action="#" class="sign-up_form">
    <div class="input_group">
     <label for="username">Name</label>
     <input
      type="text"
      id="username"
      name="username"
      placeholder="Enter your username"
      required
     />
    </div>

    <div class="input_group">
     <label for="password">Password</label>
     <input
      type="password"
      id="password"
      name="password"
      placeholder="Enter your password"
      required
     />
    </div>
    <div class="input_group">
     <label for="phone">Phone</label>
     <input
      minlength="12"
      maxlength="12"
      pattern="[0-9]*"
      type="tel"
      name="phone"
      placeholder="380 98 111 11 11"
      required
     />
    </div>
    <button type="submit">Sign Up</button>
   </form>
  </div>
 </section>
</div>
